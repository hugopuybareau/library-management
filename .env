# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=library_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# Application Settings
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=not-for-production-lol
DEBUG=False

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Session Configuration
SESSION_TYPE=filesystem
SESSION_LIFETIME_HOURS=2

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=library@ec-lyon.fr

# API Settings
API_RATE_LIMIT=100 per hour
API_VERSION=v1

# Security
JWT_SECRET_KEY=another-secret-key-for-jwt
JWT_ACCESS_TOKEN_EXPIRES=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=library.log

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379/0

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
MAX_UPLOAD_SIZE=16777216
UPLOAD_FOLDER=./uploads

# Backup Settings
BACKUP_ENABLED=True
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Currency Update
CURRENCY_UPDATE_ENABLED=True
CURRENCY_API_KEY=your_api_key_here

# Sentry (for error tracking in production)
SENTRY_DSN=

# Testing
TEST_DB_NAME=library_test_db